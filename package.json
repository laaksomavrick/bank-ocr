{
  "name": "bank-kata",
  "version": "1.0.0",
  "description": "http://codingdojo.org/kata/BankOCR/",
  "main": "index.ts",
  "repository": "https://github.com/laaksomavrick/bank-ocr",
  "author": "mavrick laakso",
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "rm -rf ./build && tsc",
    "format": "prettier --write '*/**/*.{ts,tsx}'",
    "package": "pkg build/index.js --out-path out",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "husky": ">=6",
    "jest": "^27.4.7",
    "lint-staged": ">=10",
    "pkg": "^5.5.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  }
}
